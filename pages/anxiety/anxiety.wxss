.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.list {
  width: 100%;
  background-color: #f0f0f0;
}

.item {
  width: 90%;
  padding: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  margin-left: 16rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2); 
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left: 10rpx;
}