.container {
  padding: 30rpx;
  display: grid;
  grid-template-columns: auto; 
}

.title {
  margin-top: 30rpx;
  font-size: 58rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.secTitle {
  margin-top: 40rpx;
  font-size: 45rpx;
  font-weight: bold;
  color: #555555;
  line-height: 52rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.para {
  margin-top: 30rpx;
  font-size: 35rpx;
  line-height: 52rpx;
  color: #333333;
  white-space: pre-line;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.source{
  margin-top: 30rpx;
  font-size: 22rpx;
  line-height: 52rpx;
  color: #333333;
  white-space: pre-line;
  text-align: center;
}
.line {
  border-top: 5rpx solid #ddd;
  width: 100%;
  margin-top: 50rpx;
  margin-bottom: 10rpx;
}