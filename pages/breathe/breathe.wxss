.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}
.button { 
  display: inline-block;
  background-color: deepskyblue;
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx;
  margin-top: 50rpx;
  margin-bottom: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center; 
  align-items: center; 

}

.custom-animation {
  width: 120rpx;
  height: 120rpx;
  background-color: rgb(26, 79, 236);
  box-shadow: 0rpx 0rpx 100rpx rgb(26, 79, 236, 1);
  border-radius: 50%;
  margin-bottom: 300rpx;
  margin-top: 100rpx;
}

.button-container {
  display: flex;
  margin-top: 300rpx;
  justify-content: space-between;
  
}

.breath-text {
  margin-bottom: 50rpx;
  font-size: 60rpx;
  font-weight: bold;

}
.primary {
padding-inline: 40rpx;
padding-block: 20rpx;
border: 1rpx solid #999;
  box-shadow: 5rpx 5rpx 8rpx rgb(0, 0, 0, 0.3);
border-radius: 40rpx;
color: rgb(37, 180, 2);
font-size: 30rpx;
font-weight: bold;
margin-right:100rpx ;
}
.warn {
  padding-inline: 40rpx;
  padding-block: 20rpx;
  border: 1rpx solid #999;
  box-shadow: 5rpx 5rpx 8rpx rgb(0, 0, 0, 0.3);
  border-radius: 40rpx;
  color: red;
  font-size: 30rpx;
  font-weight: bold;
  
  }