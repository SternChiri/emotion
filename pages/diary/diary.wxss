/* pages/diary/diary.wxss */
.intro {
  margin-top: 50rpx;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 30rpx;
  white-space: pre-line;
}

.container {
  padding: 20rpx;
  display: grid;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.year {
  font-size: 80rpx;
  font-weight: bold;
  color: #999;
  margin-bottom: 10rpx;
  position: absolute;
  right: 20rpx;
}

.month-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.month {
  font-size: 60rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.yue {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 25rpx;
  font-weight: bold;
}

.diary-item {
  margin-bottom: 30rpx;
  display: flex;
}

.day {
  margin-bottom: 10rpx;
  margin-top: 15rpx;
  margin-right: 15rpx;
  width: 50rpx;
}

.ri {
  display: flex;
  justify-content: center;
  font-size: 45rpx;
  color: #333;
}

.week {
  font-size: 23rpx;
  color: #555;
  display: flex;
  justify-content: center;
}

.day-placeholder {
  margin-right: 64rpx;
}

.diary-content {
  background-color: #fff;
  border-radius: 20rpx;
  border: 1rpx solid rgb(70, 70, 70, 0.3);
  box-shadow: 8rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
  padding: 20rpx;
  width: 83%;
  position: relative;
}

.time {
  font-size: 28rpx;
  color: #999;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.emo-words {
  font-size: 35rpx;
  color: #333;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
}

.emo-word {
  font-size: 35rpx;
  color: #444;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  padding-inline: 10rpx;
  padding-block: 5rpx;
  border-radius: 12rpx;
  box-shadow: 1rpx 1rpx 10rpx rgba(0, 0, 0, 0.2);
}

.idea {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}