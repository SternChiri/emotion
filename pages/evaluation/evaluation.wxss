/* pages/evaluation.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.search-bar {
  display: flex;
  width:95%;
  align-items: center;
  padding: 15rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 0 1rpx rgb(112, 112, 112);
  margin-bottom: 40rpx;
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  margin-right: 10rpx;
  margin-left: 15rpx;
}

.list {
  width: 100%;
  background-color: #f0f0f0;
}

.filter-bar {
  width: 100%;
  margin-bottom: 30rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 18rpx 20rpx;
  background-color: white;
  font-size: 28rpx;
  color: #333;
  cursor: pointer;
  position: relative;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.down {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  position: absolute;
  right: 0;
}

.item {
  width: 90%;
  padding: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  margin-left: 16rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2); 
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.num {
  font-size: 28rpx;
  position: absolute; 
  top: 75%;
  right: 0;
  transform: translateY(-50%);
  margin-right: 25rpx;
  color: #666;
}

.tag-line {
  display: flex;
  margin-top: 20rpx;
}

.tag {
  font-size: 13px;
  color: rgb(255, 255, 255);
  margin-right: 10rpx;
  padding-inline: 7rpx;
  border-radius: 10rpx;
}

.float-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 0;
}

.float-window {
  background-color: #fff;
  width: 73%;
  height: 900rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  display: block;
  overflow: hidden;
  overflow-y: scroll;
  padding: 60rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}

.description {
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 52rpx;
  white-space: pre-line;
}

.item-num {
  font-size: 32rpx;
  margin-top: 30rpx;
  margin-bottom: 150rpx;
}

.down-white {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  position: absolute;
  bottom: 0; 
  left: 50%; 
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.start {
  font-size: 38rpx;
  color: deepskyblue;
}

.line {
  border-top: 5rpx solid #ddd; 
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}