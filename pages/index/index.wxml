<!-- index.wxml -->

<view class="container">
  <!-- 今日心情 -->
  <view class="mood-card">
    <view class="date">{{todayDate}}</view>
    <view class="detail-btn" bindtap="goToDetailPage">></view>
    <view class="mood-content">
      <view class="mood-text">你今天心情如何？</view>
    </view>
  </view>

  <view class="line"></view>

  <!-- 功能卡片 -->
  <view class="function-card">
    <!-- 心理测评 -->
    <view class="sub-card">
      <image class="icon" src="/images/assessment-icon.png"></image>
      <view class="name">心理测评</view>
    </view>

    <!-- 情绪调适 -->
    <view class="sub-card">
      <image class="icon" src="/images/emotion-icon.png"></image>
      <view class="name">情绪调适</view>
    </view>
  </view>
</view>
