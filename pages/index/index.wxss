/* index.wxss */

.container {
  padding: 30rpx;
}

.mood-card {
  background-color: rgb(255, 255, 255);
  width: 92%;
  height: 350rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 3rpx solid #ddd;
  box-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.mood-write {
  widows: 90%;
  height:80%;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  color: #555555;
  white-space: pre-line;
}

.mood-content {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.mood-text {
  font-size: 45rpx;
  color: #333333;
}

.detail-btn {
  font-size: 40rpx;
  color: #007aff;
  position: absolute;
  top: 15rpx;
  right: 20rpx;
}

.function-card {
  display: flex;
  justify-content: space-between;
  width: 98%;
  height: 320rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.sub-card {
  border-radius:25rpx;
  width: 48%;
  height: 320rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  box-shadow: 0rpx 6rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.sub-image {
  border-radius:25rpx;
  width: 100%;
  height: 320rpx;
  position: relative;
}

.name {
  margin-top: 20rpx;
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

.quote-card {
  display: block;
  width: 92%;
  height: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  background-color: rgb(232, 241, 228);
  border: 1rpx solid #ddd;
  box-shadow: 0rpx 2rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.quote {
  font-size: 28rpx;
  color: #222;
  margin-top: 5rpx;
  font-style: italic;
}

.quote-author {
  font-size: 28rpx;
  color: #555;
  text-align: right;
  font-style: italic;
}

.article-card {
  background-color: rgb(255, 255, 255);
  display: flex;
  justify-content: space-between;
  width: 98%;
  height: 200rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ddd;
  box-shadow: 0rpx 2rpx 6rpx rgba(0, 0, 0, 0.1);
  white-space: pre-line;
}

.article-image {
  width: 40%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.article-info {
  width: 54%;
  display: block;
  box-sizing: border-box;
}

.article-name {
  margin-top: 40rpx;
  font-size: 45rpx;
  font-weight: bold;
  color: #333333;
}

.article-detail {
  margin-top: 15rpx;
  font-size: 35rpx;
  color: #333333;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  z-index: 999;
}

.window-content {
  background-color: #fff;
  width: 700rpx;
  height: 1400rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  display: block;
  margin-top: auto;
  overflow: hidden;
  overflow-y: scroll;
}

.article-head-image {
  width: 100%;
  height: 50%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.article-title {
  margin-top: 30rpx;
  font-size: 58rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.article-content {
  margin-top: 30rpx;
  font-size: 35rpx;
  line-height: 52rpx;
  color: #333333;
  white-space: pre-line;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.end {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

.float-button {
  position: fixed;
  right: 35rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgb(250, 119, 119);
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.float-button-icon {
  width: 80rpx;
  height: 80rpx;
}

.float-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 0;
}

.float-window {
  background-color: #fff;
  width: 630rpx;
  height: 1000rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  display: block;
  overflow: hidden;
  overflow-y: scroll;
  padding: 30rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}

.line {
  border-top: 5rpx solid #ddd; 
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}