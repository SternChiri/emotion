/* index.wxss */

.container {
  padding: 30rpx;
}

.mood-card {
  background-color: rgb(255, 255, 255);
  width: 92%;
  height: 350rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 3rpx solid #ddd;
  box-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.mood-write {
  width: 100%;
  height: 80%;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  color: #555555;
  white-space: pre-line;
}

.mood-content {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.mood-text {
  font-size: 45rpx;
  color: #333333;
  padding: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mood-emoWord {
  font-size: 80rpx;
  color: #a1a1a17c;
  font-weight: bold;
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
}

.detail-btn {
  width: 40rpx;
  color: #007aff;
  position: absolute;
  top: -42%;
  right: 25rpx;
}

.function-card {
  display: flex;
  justify-content: space-between;
  width: 98%;
  height: 320rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.sub-card {
  border-radius: 25rpx;
  width: 48%;
  height: 320rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  box-shadow: 0rpx 6rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.sub-image {
  border-radius: 25rpx;
  width: 100%;
  height: 320rpx;
  position: relative;
}

.name {
  margin-top: 20rpx;
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

.quote-card {
  display: block;
  width: 92%;
  height: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  background-color: rgb(232, 241, 228);
  border: 1rpx solid #ddd;
  box-shadow: 0rpx 2rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.quote {
  font-size: 28rpx;
  color: #222;
  margin-top: 5rpx;
  font-style: italic;
}

.quote-author {
  font-size: 28rpx;
  color: #555;
  text-align: right;
  font-style: italic;
  margin-top: 20rpx;
}

.article-card {
  background-color: rgb(255, 255, 255);
  display: flex;
  justify-content: space-between;
  width: 98%;
  height: 200rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ddd;
  box-shadow: 0rpx 2rpx 6rpx rgba(0, 0, 0, 0.1);
  white-space: pre-line;
}

.article-image {
  width: 40%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.article-info {
  width: 54%;
  display: block;
  box-sizing: border-box;
}

.article-name {
  margin-top: 40rpx;
  font-size: 45rpx;
  font-weight: bold;
  color: #333333;
}

.article-detail {
  margin-top: 15rpx;
  font-size: 35rpx;
  color: #333333;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.window-content {
  background-color: #fff;
  width: 700rpx;
  height: 1350rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  display: block;
  margin-top: auto;
  overflow: hidden;
  overflow-y: scroll;
  z-index: 100;
  position: fixed;
  top: 55%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.article-head-image {
  width: 100%;
  height: 50%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.article-title {
  margin-top: 30rpx;
  font-size: 58rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.article-content {
  margin-top: 30rpx;
  font-size: 35rpx;
  line-height: 52rpx;
  color: #333333;
  white-space: pre-line;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.end {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

.float-button {
  position: fixed;
  right: 35rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #6EC6FF;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.float-button-icon {
  width: 80rpx;
  height: 80rpx;
}

.float-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 0;
}

.float-window {
  background-color: #fff;
  width: 600rpx;
  height: 950rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  display: block;
  padding: 40rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}

.float-window-content {
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.slider-container {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 8rpx;
}

.slider-guide {
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}

.slider-value-box {
  font-size: 28rpx;
  display: flex;
  justify-content: center;
}

.slider-value {
  font-size: 28rpx;
  padding-inline: 13rpx;
  padding-block: 3rpx;
  border: 1rpx solid rgb(184, 184, 184);
  border-radius: 20rpx;
  color: #333333;
}

.custom-slider {
  height: 25rpx;
  border-radius: 20rpx;
  margin-bottom: 25rpx;
}

.meaning-container {
  margin-top: 40rpx;
  margin-left: 15rpx;
}

.selected-meaning-general {
  font-size: 30rpx;
  padding-inline: 13rpx;
  padding-block: 5rpx;
  border-radius: 13rpx;
  background-color: rgb(235, 235, 235);
  color: #333333;
  margin-right: 20rpx;
}

.selected-meaning-active {
  font-size: 30rpx;
  padding-inline: 13rpx;
  padding-block: 5rpx;
  border-radius: 13rpx;
  background-color: #6EC6FF;
  color: #ffffff;
  margin-right: 20rpx;
}

.idea {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  padding: 10rpx;
}

.input-mood {
  border: 1rpx solid #ccc;
  padding: 20rpx;
  border-radius: 20rpx;
  height: 220rpx;
  background-color: rgb(249, 249, 249);
}

.submit-button {
  background-color: #42a5f5;
  color: #ffffff;
  border: none;
  padding: 20rpx 20rpx;
  border-radius: 25rpx;
  font-size: 35rpx;
  position: absolute;
  bottom: 70rpx;
  left: 50%;
  transform: translateX(-50%);
}

.line {
  border-top: 5rpx solid #ddd;
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}