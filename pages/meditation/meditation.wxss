.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.list {
  width: 100%;
  background-color: #f0f0f0;
  margin-bottom: 150rpx;
}

.name {
  font-size: 42rpx;
  
  margin-bottom: 30rpx;
  width: 90%;
  padding: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  margin-left: 16rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
}

.time {
  font-size: 28rpx;
  position: absolute; 

  top: 75%;
  right: 0;
  transform: translateY(-50%);
  margin-right: 25rpx;
  color: #888;
}
.audio-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(to top, rgb(57, 205, 255), #ffffff);
  box-shadow: 0rpx -10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.name-container{
  height: 80rpx;
  margin-top: 10rpx;
}
.music-name{
  font-size: 35rpx;
  font-weight: bold;
  margin-left: 40rpx;
}
.button-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 50%;
  margin-bottom: 20rpx;
  transform: translateX(50%);
}
.button {
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 20rpx;
}
.buttonM {
  height: 70rpx;
  width: 70rpx;
  margin-bottom: 20rpx;
}