.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.list {
  width: 100%;
  background-color: #f0f0f0;
  margin-bottom: 100rpx;
}

.name {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  width: 90%;
  padding: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  margin-left: 16rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
}


.audio-container {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 92%;
  background-color: rgb(255, 255, 255);
}
.line {
  border-top: 5rpx solid #ddd;
  width: 100%;

  margin-bottom: 10rpx;
}
.music-name{
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 30rpx;
}
.button-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* 垂直居中对齐 */
  width: 100%;
  /* 将按钮均匀分布在容器中 */
}